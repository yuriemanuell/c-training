#include <stdio.h>
int main () {
	char opcao;
	
	printf ("Qual o resultado de 2 + 2?\n");
	printf ("a) 6\n");
	printf ("b) 4\n");
	printf ("c) 5\n");
  printf ("Escolha a opcao a, b ou c\n");
  scanf (" %c", &opcao);
	
	switch (opcao) {
		
	case 'a':
            printf("Voce escolheu a). Resposta ERRADA!\n");
        
        break;
            
    case 'b':
            printf ("Voce escolheu b). Resposta CORRETA!\n");
        
        break;
    	
    case 'c':
    	    printf ("Voce escolheu c). Resposta ERRADA!\n");
    	
    	break;
    	
    	default:
    		
    		printf ("Alternativa Invalida! Selecione a), b) ou c) \n");

    }
    
    		return 0;
    	
}
	
